{
  "model": {
    "name":"mnist fully connected",
    "type": "classification",
    "data": {
      "kind": "mnist",
      "def": {
        "scale": 180,
        "path": "../data/mnist/",
        "test_label_path": "t10k-labels-idx1-ubyte",
        "train_label_path": "train-labels-idx1-ubyte",
        "test_data_path": "t10k-images-idx3-ubyte",
        "train_data_path": "train-images-idx3-ubyte"
      }
    },
    "layers": [
      { "name":"#010",
        "kind": "SPARSE_FC",
        "def": {"inputs": 180,"outputs": 120, "sparsity": 0.7}
      },
      {
        "name": "#010.1",
        "kind": "LRELU",
        "def": {"leakiness": 50}
      },
      { "name":"#020",
        "kind": "SPARSE_FC",
        "def": {"inputs": 120, "outputs": 50,"sparsity": 0.6}
      },
      {
        "name": "#020.1",
        "kind": "LRELU",
        "def": {"leakiness": 50}
      },
      { "name":"#021",
        "kind": "SPARSE_FC",
        "def": {"inputs": 50, "outputs": 50,"sparsity": 0}
      },
      {
        "name": "#021.1",
        "kind": "LRELU",
        "def": {"leakiness": 50}
      },
      { "name":"#030",
        "kind": "SPARSE_FC",
        "def": {"inputs": 50,"outputs": 10,"sparsity": 0}
      },
      {
        "name": "#030.1",
        "kind": "SOFTMAX",
        "def": { }
      }
    ],
    "optimizer": {
      "mnist_good": {
        "kind": "SGD",
        "def": {
          "epochs": 12,
          "mini_batch_size": 24,
          "threads": 4,
          "learning_rates": [0.009, 0.0001],
          "save_schedule": [0.7,0.8,0.95,0.98]
        }
      }
    }
  }
}